<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/guide_header"
    android:background="@color/colorBackgroudGuide">

    <TextView
        android:id="@+id/guide_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_header_text"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/guide_header_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorBackgroudGuide"
        android:text="@string/guide_header_button"
        android:textColor="@color/colorGuideHeaderButton"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@id/guide_header_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guide_header_text"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
