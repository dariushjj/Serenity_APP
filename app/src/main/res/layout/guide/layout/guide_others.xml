<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_others_layout"
    android:background="@color/colorBackgroudGuide">

    <include layout="@layout/guide_header"/>
    <TextView
        android:id="@+id/guide_others_share_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/guide_others_share_title_text"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/guide_header_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/guide_others_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/guide_others_share_text"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/guide_others_share_title_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52"/>

    <TextView
        android:id="@+id/guide_others_invite_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_others_invite_title_text"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/guide_others_invite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_others_invite_text"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/guide_others_invite_title_text"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
