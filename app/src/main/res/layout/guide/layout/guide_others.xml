<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_others_layout"
    android:background="@mipmap/background">

    <include layout="@layout/guide_header"/>
    <TextView
        android:id="@+id/guide_others_share_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/guide_others_share_title_text"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/guide_header_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/guide_others_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/guide_others_share_text"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/guide_others_share_title_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/guide_others_image"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:src="@mipmap/share"
        app:layout_constraintDimensionRatio="H,25:16"
        app:layout_constraintBottom_toTopOf="@+id/guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_others_share_text"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <TextView
        android:id="@+id/guide_others_invite_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_others_invite_title_text"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/guide_others_invite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_others_invite_text"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/guide_others_invite_title_text"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/guide_others_invite_image"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:src="@mipmap/friends"
        app:layout_constraintDimensionRatio="H,5:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_others_invite_text"
        app:layout_constraintBottom_toTopOf="@+id/get_started_button"/>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/get_started_button"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:background="@color/colorThemeBlue"
        android:textAllCaps="false"
        android:onClick="goSignIn"
        app:layout_constraintDimensionRatio="W,4:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
