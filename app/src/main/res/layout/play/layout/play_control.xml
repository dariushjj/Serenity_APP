<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_control_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/play_previous_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/previous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/play_stop_start_button"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>
    <Button
        android:id="@+id/play_stop_start_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/start"
        app:layout_constraintLeft_toRightOf="@+id/play_previous_button"
        app:layout_constraintRight_toLeftOf="@+id/play_next_button"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/play_next_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/next"
        app:layout_constraintLeft_toRightOf="@+id/play_stop_start_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
