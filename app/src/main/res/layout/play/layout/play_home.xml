<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.serenity.view.widget.CircleProgressBar
        android:id="@+id/play_circle_progress_bar"
        android:layout_width="300dp"
        android:layout_height="300dp"

        app:circle_color="@color/colorThemeBlue"
        app:circle_radius="100dp"
        app:circle_width="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:progress="50"
        app:progress_color="@color/colorThemeOrange"
        app:start_angle="-90"
        app:use_center="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
