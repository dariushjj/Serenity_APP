<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/orange"
    android:id="@+id/play_home_layout">

    <com.serenity.view.widget.BackTitleView
        android:id="@+id/play_home_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/play_disk_music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/play_disk_music_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/play_circle_progress_bar"
        app:layout_constraintRight_toRightOf="@id/play_circle_progress_bar"
        app:layout_constraintTop_toTopOf="@id/play_circle_progress_bar"/>

    <com.serenity.view.widget.DiskView
        android:id="@+id/disk_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
