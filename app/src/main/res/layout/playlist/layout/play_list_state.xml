<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_list_state_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorThemeGrey">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/play_list_state_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cover2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/play_list_state_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/play_list_state_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/play_list_state_info_text"/>
    <TextView
        android:id="@+id/play_list_state_info_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="12sp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/play_list_state_title_text"
        app:layout_constraintStart_toStartOf="@+id/play_list_state_title_text"
        app:layout_constraintBottom_toBottomOf="parent" />
    <Button
        android:id="@+id/play_list_state_previous_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/previous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/play_list_state_stop_start_button"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:id="@+id/play_list_state_stop_start_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/start"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/play_list_state_next_button"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:id="@+id/play_list_state_next_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/next"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
